<Window
    x:Class="Symplex_method.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Symplex_method"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="525"
    Height="350"
    mc:Ignorable="d">
    <Window.Resources>
        <SolidColorBrush x:Key="ListBox.Static.Background" Color="#FFFFFFFF" />
        <SolidColorBrush x:Key="ListBox.Static.Border" Color="#FFABADB3" />
        <SolidColorBrush x:Key="ListBox.Disabled.Background" Color="#FFFFFFFF" />
        <SolidColorBrush x:Key="ListBox.Disabled.Border" Color="#FFD9D9D9" />
        <Style x:Key="ListBoxStyle1" TargetType="{x:Type ListBox}">
            <Setter Property="Background" Value="{StaticResource ListBox.Static.Background}" />
            <Setter Property="BorderBrush" Value="{StaticResource ListBox.Static.Border}" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}" />
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Hidden" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
            <Setter Property="ScrollViewer.CanContentScroll" Value="true" />
            <Setter Property="ScrollViewer.PanningMode" Value="Both" />
            <Setter Property="Stylus.IsFlicksEnabled" Value="False" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListBox}">
                        <Border
                            x:Name="Bd"
                            Padding="1"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            SnapsToDevicePixels="true">
                            <ScrollViewer Padding="{TemplateBinding Padding}" Focusable="false">
                                <ItemsPresenter SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                            </ScrollViewer>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource ListBox.Disabled.Background}" />
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource ListBox.Disabled.Border}" />
                            </Trigger>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsGrouping" Value="true" />
                                    <Condition Property="VirtualizingPanel.IsVirtualizingWhenGrouping" Value="false" />
                                </MultiTrigger.Conditions>
                                <Setter Property="ScrollViewer.CanContentScroll" Value="false" />
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Button
            x:Name="button"
            Width="105"
            Height="30"
            Margin="307,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="GenerateTable"
            Content="Tdysh (generate)" />
        <TextBox
            x:Name="variablesCount"
            Width="120"
            Height="23"
            Margin="14,13,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextChanged="ValidateInputOnlyPositive"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="limitsCount"
            Width="120"
            Height="23"
            Margin="182,13,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextChanged="ValidateInputOnlyPositive"
            TextWrapping="Wrap" />
        <Label
            x:Name="label"
            Width="80"
            Height="29"
            Margin="14,36,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="К. змінних" />
        <Label
            x:Name="label1"
            Width="105"
            Margin="182,36,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="К. обмежень" />
        <ListBox
            x:Name="listBox"
            Width="429"
            Height="203"
            Margin="60,106,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />
        <Button
            x:Name="solveButton"
            Width="72"
            Height="32"
            Margin="417,9,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="Solve"
            Content="Solve" />
        <ListBox
            x:Name="listBoxValue"
            Width="429"
            Height="36"
            Margin="60,65,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" Style="{DynamicResource ListBoxStyle1}" />
        <ListBox
            x:Name="listBoxBasis"
            Width="55"
            Height="203"
            Margin="0,106,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Style="{DynamicResource ListBoxStyle1}" />

    </Grid>
</Window>
